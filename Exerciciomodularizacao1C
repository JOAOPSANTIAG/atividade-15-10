import java.util.Scanner;
class UmC {

 private static int soma (int numero1, int numero2, int numero3){
       int media = numero1 + numero2 + numero3 / 3;
        return media;
                              
    }



  
  public static void main(String[] args) {
    Scanner entrada = new Scanner (System.in);
    
    int numero1, numero2, numero3;
    int resultado;
    
    System.out.println("Escreva o primeiro numero: ");
    numero1 = entrada.nextInt();
    System.out.println("Escreva o segundo numero: ");
    numero2 = entrada.nextInt();
    System.out.println("Escreva o terceiro numero: ");
    numero3 = entrada.nextInt();

    resultado = soma(numero1, numero2, numero3);
System.out.println("a media Aritmetica  Ã© " + resultado);
    
  }
    
  }
